<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:onClick="saatleriki"
    tools:context=".saatler">

  <com.airbnb.lottie.LottieAnimationView
      android:layout_width="150dp"
      android:layout_height="150dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.061"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.349"
      app:lottie_autoPlay="true"
      app:lottie_loop="true"
      app:lottie_rawRes="@raw/analogsaatanimasyon" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="367dp"
      android:layout_height="75dp"
      android:fontFamily="@font/baloo"
      android:gravity="center"
      android:text="Saatleri Nasıl Okuruz?"
      android:textColor="@color/yaziColor"
      android:textSize="34sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.659"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.044" />

  <TextView
      android:id="@+id/textView11"
      android:layout_width="219dp"
      android:layout_height="255dp"
      android:fontFamily="@font/baloo"
      android:paddingLeft="5dp"
      android:text="    Bir gün 24 saattir. Analog saatler ise 12 parçadan oluşurlar. İlk turunda öğleden önce(a.m.) olarak, İkinci turunda ise öğleden sonrayı(p.m.) gösterir."
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.916"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.282" />

  <TextView
      android:id="@+id/textView14"
      android:layout_width="353dp"
      android:layout_height="128dp"
      android:layout_marginBottom="36dp"
      android:fontFamily="@font/baloo"
      android:text="    Bir saat ise 60 dakikadan oluşur. Yani saat 12'ye, her bir aralık da 5'e bölünmüştür. Yani saatte dakikayı temsil eden 60 aralık vardır."
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.816" />

  <Button
      android:id="@+id/button2"
      android:layout_width="152dp"
      android:layout_height="66dp"
      android:fontFamily="@font/baloo"
      android:onClick="saatleriki"
      android:text="Anladım"
      android:textSize="24sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.937" />
</androidx.constraintlayout.widget.ConstraintLayout>